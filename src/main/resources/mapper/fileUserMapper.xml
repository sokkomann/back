<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.haetssal_jangteo.mapper.FileUserMapper">
    <insert id="insert">
        insert into tbl_file_user (id, user_id)
        values (#{id}, #{userId})
    </insert>

    <select id="selectById">
        select
            id,
            file_type,
            file_name,
            file_origin_name,
            file_saved_path,
            file_size,
            created_datetime,
            user_id
        from vw_file_user
        where user_id = #{userId}
    </select>

</mapper>